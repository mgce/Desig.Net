<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true"
                   assembly="NHibernateMVC" namespace="NHibernateMVC.Models">
  <class name="Person" table="Person" dynamic-update="true" lazy="true" >
    
    
    <many-to-one not-null="true" name="Customer" column="CustomerId"/>
    
    <bag name="Notes" lazy="true" inverse="true" cascade="all-delete-orphan"/>
    <key column="OrderId"/>
    <one-to-many class="Note"/>
    
    <cache usage="read-write"/>
    <id name="Id" column="Id" type="int">
      <generator class="native" />
    </id>
    <property name="Description" />
    <property name="Price" />
    <property name="Created" />
    <property name="Deadline" />
    <property name="CustomerId" />
  </class>
</hibernate-mapping>